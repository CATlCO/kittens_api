<%= form_for(@kitten) do |f| %>
  <%= render 'error_msg' %>
  <div class="fields">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :age %>
    <%= f.select :age, options_for_select((1..20).to_a) %>
    <%= f.label :cuteness %>
    <%= f.select :cuteness, options_for_select([["Cute", 1], ["Super cute", 2], ["Kawai", 3]]) %>
    <%= f.label :softness %>
    <%= f.select :softness, 
        options_for_select([["Shoe brush", 1], ["Plush Toy", 2], ["Cotton candy", 3], ["Silky heaven", 4]]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
